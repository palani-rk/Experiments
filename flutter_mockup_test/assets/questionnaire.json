{
  "welcome": {
    "title": "Welcome to NutriApp",
    "message": "Let's create your personalized nutrition plan together. This quick assessment will help us understand your goals, preferences, and dietary needs.",
    "buttonText": "Get Started"
  },
  "sections": [
    {
      "id": "basic_info",
      "title": "Basic Information",
      "questions": [
        {
          "id": "name",
          "text": "What's your name?",
          "inputType": "text",
          "required": true,
          "hint": "Enter your first name"
        },
        {
          "id": "age",
          "text": "What's your age?",
          "inputType": "number",
          "required": true,
          "hint": "Enter your age in years",
          "validation": {
            "min": 13,
            "max": 120
          }
        },
        {
          "id": "gender",
          "text": "What's your gender?",
          "inputType": "radio",
          "required": true,
          "options": ["Male", "Female", "Other", "Prefer not to say"]
        }
      ]
    },
    {
      "id": "health_goals",
      "title": "Health Goals",
      "questions": [
        {
          "id": "primary_goal",
          "text": "What's your primary health goal?",
          "inputType": "radio",
          "required": true,
          "options": [
            "Lose weight",
            "Gain weight",
            "Maintain current weight",
            "Build muscle",
            "Improve general health",
            "Manage a health condition"
          ]
        },
        {
          "id": "activity_level",
          "text": "How would you describe your activity level?",
          "inputType": "radio",
          "required": true,
          "options": [
            "Sedentary (little to no exercise)",
            "Lightly active (light exercise 1-3 days/week)",
            "Moderately active (moderate exercise 3-5 days/week)",
            "Very active (hard exercise 6-7 days/week)",
            "Extremely active (very hard exercise, physical job)"
          ]
        }
      ]
    },
    {
      "id": "dietary_preferences",
      "title": "Dietary Preferences",
      "questions": [
        {
          "id": "diet_type",
          "text": "Do you follow any specific diet?",
          "inputType": "multiselect",
          "required": false,
          "options": [
            "None/Standard diet",
            "Vegetarian",
            "Vegan",
            "Keto",
            "Paleo",
            "Mediterranean",
            "Low-carb",
            "Gluten-free",
            "Other"
          ]
        },
        {
          "id": "food_allergies",
          "text": "Do you have any food allergies or intolerances?",
          "inputType": "multiselect",
          "required": false,
          "options": [
            "None",
            "Nuts",
            "Dairy/Lactose",
            "Gluten",
            "Shellfish",
            "Eggs",
            "Soy",
            "Fish",
            "Other"
          ]
        },
        {
          "id": "disliked_foods",
          "text": "Are there any foods you particularly dislike or want to avoid?",
          "inputType": "text",
          "required": false,
          "hint": "List foods you don't enjoy or want to avoid"
        }
      ]
    },
    {
      "id": "lifestyle",
      "title": "Lifestyle",
      "questions": [
        {
          "id": "cooking_frequency",
          "text": "How often do you cook at home?",
          "inputType": "radio",
          "required": true,
          "options": [
            "Daily",
            "4-6 times per week",
            "2-3 times per week",
            "Once per week",
            "Rarely/Never"
          ]
        },
        {
          "id": "meal_prep_time",
          "text": "How much time can you typically spend on meal preparation?",
          "inputType": "radio",
          "required": true,
          "options": [
            "Less than 15 minutes",
            "15-30 minutes",
            "30-60 minutes",
            "1-2 hours",
            "More than 2 hours"
          ]
        },
        {
          "id": "budget_range",
          "text": "What's your weekly food budget range?",
          "inputType": "radio",
          "required": false,
          "options": [
            "Under $50",
            "$50-$100",
            "$100-$150",
            "$150-$200",
            "Over $200"
          ]
        }
      ]
    }
  ]
}